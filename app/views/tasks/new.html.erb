<title>New task</title>
<h1>New Task</h1>
<% form_for (@task) do |f| %>
  <%= f.error_messages %>  
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= label :order, :title, "This task should be handled after task:" %>
    <%= f.select :order_id, Task.all.collect {|p| [ p.title, p.id ] }, :prompt => "Select..." %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
<%= link_to 'Back', home_path %>
